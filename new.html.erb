<div class="main">
  <header>
    <h1>新建统计项目</h1> 
  </header>

  <form class="form-horizontal" method="post" role="form">

    <div class="form-group">
      <label class="col-md-2 control-label" for="project-name">项目名称</label>
      <div class="col-md-6">
        <input class="form-control" id="project-name" type="text" name="name">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="class">班级</label>
      <div class="col-md-3">
        <select class="form-control" name="class" id="class">
          <option value="二年级3班">二年级3班</option>
        </select>
        <a class="small" href="">增加一个班级</a>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label" for="">题目数量</label>
      <div class="col-md-3">
        <input class="form-control" type="number">
      </div>
    </div>

    <div class="form-group">
      <label for="" class="col-md-2 control-label">上传试卷</label>
      <div class="col-md-6">
        <input type="file">
      </div>
    </div>

    <div class="form-group">
      <br>
      <br>
      <div class="col-md-12">
        <a href="standard.html" class="btn btn-primary">开始统计</a>
        <button type="submit" class="btn btn-default">保存并退出</button>
      </div>
    </div>

  </form>

</div>