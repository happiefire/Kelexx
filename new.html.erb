  <form method="post" role="form">

    <section class="project-setup">
      <h2>项目metadata设置</h2>
      <hr>
      <div class="form-group">
        <label for="project-name">项目名称</label>
        <input id="project-name" type="text" name="name">
      </div>

      <div class="form-group">
        <label for="class">班级</label>
        <select name="class" id="class">
          <option value="二年级3班">二年级3班</option>
        </select>
        <a href="">+ 添加一个班级</a>
      </div>
    </section>

    <section class="exam-setup">
      <h2>试卷详情设置</h2>
      <hr>

      <div class="form-group pb-info-form" id="pb-info-1">
        <label>题型&nbsp
          <select class="pb-info-type">
            <option value="type-tiankong">填空题</option>
            <option value="type-xuanze">选择题</option>
            <option value="type-wenda">问答题</option>
          </select>
        </label>
        <label>
          题号范围&nbsp
          <input class="pb-info-num" type="text" placeholder="例: 1-9,15,17">
        </label>
        <label>
          默认每题分值&nbsp
          <input class="pb-info-score" type="text">
        </label>
        <a class="btn">生成题号表</a>
      </div>

      <div class="form-group pb-info-form" id="pb-info-2">
        <label>题型&nbsp
          <select class="pb-info-type">
            <option value="type-tiankong">填空题</option>
            <option value="type-xuanze">选择题</option>
            <option value="type-wenda">问答题</option>
          </select>
        </label>
        <label>
          题号范围&nbsp
          <input class="pb-info-num" type="text" placeholder="例: 1-9,15,17">
        </label>
        <label>
          默认每题分值&nbsp
          <input class="pb-info-score" type="text">
        </label>
        <button class="btn">生成题号表</button>

      </div>

      <a>+ 添加一组题目</a>





